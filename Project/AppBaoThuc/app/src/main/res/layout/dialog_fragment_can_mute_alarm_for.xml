<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_can_mute_alarm_for_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Khi một báo thức đang diễn ra, bạn có thể nhấn nút im lặng để tạm thời tắt tiếng chuông báo, nhưng bạn chỉ có thể làm vậy một số lần nhất định. Sau đó, báo thức sẽ không thể im lặng, cho dù bạn có bấm cái nút đó mạnh như thế nào. Vậy bạn muốn cho phép nó giữ yên lặng bao nhiêu lần? Giá trị lớn nhất là 5 và nhỏ nhất là 0, nghĩa là báo thức sẽ không bao giờ im lặng."
        android:textSize="20sp" />

    <NumberPicker
        android:id="@+id/number_picker_can_mute_alarm_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_can_mute_alarm_for_explanation"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/linear_layout_confirmation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_picker_can_mute_alarm_for"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_give_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OK" />
    </LinearLayout>
</RelativeLayout>