<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A09B9B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Question"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E7CCCC"
                android:text="s"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Result"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:text=""
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/so1"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="1" />

                <Button
                    android:id="@+id/so2"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="2" />

                <Button
                    android:id="@+id/so3"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="3" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:src="@android:drawable/ic_input_delete" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"

                >

                <Button
                    android:id="@+id/so4"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="4" />

                <Button
                    android:id="@+id/so5"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="5" />

                <Button
                    android:id="@+id/so6"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="6" />

                <Button
                    android:id="@+id/btnConfirm"
                    style="@style/btnOK"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="OK" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/so7"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="7" />

                <Button
                    android:id="@+id/so8"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="8" />

                <Button
                    android:id="@+id/so9"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="9" />

                <Button
                    android:id="@+id/so0"
                    style="@style/NumberStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_select"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>