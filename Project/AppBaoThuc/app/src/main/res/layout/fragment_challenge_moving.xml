<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_distance_to_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance to move: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/text_view_distance_to_move"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_debug_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_distance" />

    <Button
        android:id="@+id/button_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEBUG"
        app:layout_constraintBaseline_toBaselineOf="@id/button_alternative_challenge"
        app:layout_constraintEnd_toStartOf="@id/button_alternative_challenge" />

    <Button
        android:id="@+id/button_alternative_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alternative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_distance_to_move" />
</android.support.constraint.ConstraintLayout>